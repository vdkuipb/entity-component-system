{
    "compilerOptions": {
      "moduleResolution": "node",
      "target": "es5",
      "module": "es2015",
      "lib": [
          "es2015",
          "es2016",
          "es2017",
          "dom"
      ],
      "strict": true,
      "outDir": "./build/",
      "declaration": true,
      "declarationDir": "./build/types",
      "strictNullChecks": false,
      "noImplicitAny": true,
      "jsx": "react",
      "allowJs": true,
      "typeRoots": [
        "node_modules/@types"
      ],
    }
}